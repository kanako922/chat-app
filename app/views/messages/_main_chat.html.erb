<div class="main_chat_header">
  <div class="chat_name">
    <%= @room.name %>
  </div>
  <div class="end_btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="main_chat_messages">
<%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'main_chat_form', local: true do |f| %>
  <div class="input_form">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit_btn' %>
<% end %>